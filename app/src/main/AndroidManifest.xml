<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dkc.fileserverclient">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- 主活动 -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 文件列表活动 -->
        <activity
            android:name=".FileListActivity"
            android:exported="false" />

        <!-- 预览活动 -->
        <activity
            android:name=".PreviewActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <activity
            android:name=".TextPreviewActivity"
            android:label="文本预览"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <activity
            android:name=".ImageGalleryActivity"
            android:label="图片库"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name=".TextLibraryActivity"
            android:label="文本库"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name=".TextLibraryDetailActivity"
            android:label="文本详情"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name=".VideoLibraryActivity"
            android:label="视频库"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name=".AudioLibraryActivity"
            android:label="音频库"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <!-- 添加设置活动 -->
        <activity
            android:name=".SettingsActivity"
            android:label="设置"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
    </application>

</manifest>